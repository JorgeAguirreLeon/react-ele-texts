@import './react-tagsinput'

body
  background: gray

#app
  background: white
  min-height: 100vh

h1.instructions-title
  margin-bottom: 20px

h2.instructions-subtitle
  margin-bottom: 20px

.btn-assert
.btn-assert:focus
  height 45px
  background transparent
  color #337ab7
  outline none

.react-tagsinput
  border 1px solid #2e6da4

.react-tagsinput-tag
  font-size 15px

.main-container
  padding-bottom 80px

.footer
  position fixed
  bottom 0
  width 100%
  background-color #f8f8f8
  border-top 1px solid #e7e7e7
  height 40px

.instructions-progress
  text-transform uppercase
  font-size 14px
  font-weight 700
  color gray
  margin-bottom 5px

.footer-container
  line-height 40px

.alert
  margin-top 10px
